<div class="forms">
<%= form_with(model: deal, url: category_deals_path(@category)) do |form| %>
  <% if deal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(deal.errors.count, "error") %> prohibited this user from being saved:</h2>
 
      <ul>
        <% deal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="inputs">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
 
  <div class="inputs">
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount %>
  </div>

  <div class="check-boxes">
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name %>
  </div>
    
  <%= form.hidden_field :author_id, value: current_user.id %>
  
  <div class="save">
    <%= form.submit %>
  </div>
<% end %>
</div>
